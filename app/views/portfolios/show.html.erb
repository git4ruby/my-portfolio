<%= image_tag @portfolio.main_image unless @portfolio.main_image.nil? %>

<h1>
  <%= @portfolio.title %>
</h1>

<em>
  <%= @portfolio.subtitle %>
</em>

<p>
  <%= @portfolio.body %>
</p>

<%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
<%= link_to "Delete Post", portfolio_path(@portfolio), method: :delete, data: {confirm: 'Are you sure?'}  %> |
<%= link_to 'Back', portfolios_path %>
