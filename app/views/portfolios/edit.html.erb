<h1> Edit this Portfolio Item </h1>

<%= form_with(model: @portfolio, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Portfolio Items", portfolios_path %>
<%= link_to "Create New Item", new_portfolio_path %>
<%= link_to "Back", portfolio_show_path(@portfolio) %>
<%= link_to "Delete Post", portfolio_path(@portfolio), method: :delete, data: {confirm: 'Are you sure?'}  %>
